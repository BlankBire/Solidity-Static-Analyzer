{
  "name": "solidity-static-analyzer",
  "displayName": "Solidity Static Analyzer",
  "description": "Static analysis diagnostics for Solidity smart contracts in VS Code.",
  "version": "0.0.1",
  "publisher": "your-name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://example.com/your-repo.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:solidity",
    "workspaceContains:**/*.sol"
  ],
  "main": "out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Solidity Static Analyzer",
      "properties": {
        "solidityStaticAnalyzer.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Solidity Static Analyzer."
        },
        "solidityStaticAnalyzer.rules.txOrigin": {
          "type": "boolean",
          "default": true,
          "description": "Flag usage of tx.origin."
        },
        "solidityStaticAnalyzer.rules.selfdestruct": {
          "type": "boolean",
          "default": true,
          "description": "Flag usage of selfdestruct/suicide."
        },
        "solidityStaticAnalyzer.rules.delegatecall": {
          "type": "boolean",
          "default": true,
          "description": "Flag usage of delegatecall."
        },
        "solidityStaticAnalyzer.rules.lowLevelCallValue": {
          "type": "boolean",
          "default": true,
          "description": "Flag usage of call.value() or (bool success,)."
        },
        "solidityStaticAnalyzer.rules.missingSemicolon": {
          "type": "boolean",
          "default": true,
          "description": "Detect missing semicolons at end of statements."
        },
        "solidityStaticAnalyzer.rules.missingParentheses": {
          "type": "boolean",
          "default": true,
          "description": "Detect missing parentheses in function calls."
        },
        "solidityStaticAnalyzer.rules.missingBraces": {
          "type": "boolean",
          "default": true,
          "description": "Detect missing braces in control flow statements."
        },
        "solidityStaticAnalyzer.rules.missingReturn": {
          "type": "boolean",
          "default": true,
          "description": "Detect missing return statements in functions."
        },
        "solidityStaticAnalyzer.rules.wrongKeywords": {
          "type": "boolean",
          "default": true,
          "description": "Detect deprecated or wrong keywords."
        },
        "solidityStaticAnalyzer.rules.missingDataType": {
          "type": "boolean",
          "default": true,
          "description": "Detect missing data type declarations."
        },
        "solidityStaticAnalyzer.rules.missingPayable": {
          "type": "boolean",
          "default": true,
          "description": "Detect missing payable modifier for ETH handling functions."
        },
        "solidityStaticAnalyzer.rules.functionNaming": {
          "type": "boolean",
          "default": true,
          "description": "Validate function identifier syntax (no leading digits, no special chars)."
        },
        "solidityStaticAnalyzer.rules.variableNaming": {
          "type": "boolean",
          "default": true,
          "description": "Validate variable identifier syntax (no leading digits, no special chars)."
        },
        "solidityStaticAnalyzer.rules.contractNaming": {
          "type": "boolean",
          "default": true,
          "description": "Validate contract/interface/library identifier syntax (no leading digits, no special chars)."
        },
        "solidityStaticAnalyzer.naming.functionPattern": {
          "type": "string",
          "default": "^[A-Za-z_][A-Za-z0-9_]*$",
          "description": "Regex for valid function identifiers."
        },
        "solidityStaticAnalyzer.naming.variablePattern": {
          "type": "string",
          "default": "^[A-Za-z_][A-Za-z0-9_]*$",
          "description": "Regex for valid variable identifiers."
        },
        "solidityStaticAnalyzer.naming.constantPattern": {
          "type": "string",
          "default": "^[A-Za-z_][A-Za-z0-9_]*$",
          "description": "Regex for valid constant identifiers."
        },
        "solidityStaticAnalyzer.naming.contractPattern": {
          "type": "string",
          "default": "^[A-Za-z_][A-Za-z0-9_]*$",
          "description": "Regex for valid contract/interface/library identifiers."
        },
        "solidityStaticAnalyzer.maxProblems": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of reported problems per file."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "lint": "echo 'No linter configured'",
    "prepublishOnly": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  }
}